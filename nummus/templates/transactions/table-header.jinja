<div id="txn-header"
     class="header w-full flex justify-between font-bold border-b border-b-grey-200"
     hx-indicator="unset">
    <div class="w-[6rem] min-w-[6rem] p-1">Date</div>
    {% if not no_account_column %}
        <div class="w-[8rem] min-w-[8rem] p-1 flex items-center relative group">
            Account
            <div id="txn-icon-account">
                {% with any_filters = txn_table["any-filters-account"] %}
                    {% include "transactions/table-options-icon.jinja" %}
                {% endwith %}
            </div>
            <div id="txn-account"
                 class="absolute left-0 top-8 bg-white border border-white drop-shadow-md font-normal w-64 hidden group-hover:block">
                {% with options = txn_table["options-account"], name="account" %}
                    {% include "transactions/table-options.jinja" %}
                {% endwith %}
            </div>
        </div>
    {% endif %}
    {% if asset_transactions %}
        <div class="w-[8rem] min-w-[8rem] p-1 flex items-center relative group grow">
            Asset
            <div id="txn-icon-asset">
                {% with any_filters = txn_table["any-filters-asset"] %}
                    {% include "transactions/table-options-icon.jinja" %}
                {% endwith %}
            </div>
            <div id="txn-asset"
                 class="absolute left-0 top-8 bg-white border border-white drop-shadow-md font-normal w-64 hidden group-hover:block">
                {% with options = txn_table["options-asset"], name="asset" %}
                    {% include "transactions/table-options.jinja" %}
                {% endwith %}
            </div>
        </div>
    {% else %}
        <div class="w-[{{ 10 if no_account_column else 8 }}rem] min-w-[{{ 10 if no_account_column else 8 }}rem] p-1 flex items-center relative group">
            Payee
            <div id="txn-icon-payee">
                {% with any_filters = txn_table["any-filters-payee"] %}
                    {% include "transactions/table-options-icon.jinja" %}
                {% endwith %}
            </div>
            <div id="txn-payee"
                 class="absolute left-0 top-8 bg-white border border-white drop-shadow-md font-normal w-64 hidden group-hover:block">
                {% with options = txn_table["options-payee"], name="payee" %}
                    {% include "transactions/table-options.jinja" %}
                {% endwith %}
            </div>
        </div>
        <div class="w-[{{ 10 if no_account_column else 8 }}rem] min-w-[{{ 10 if no_account_column else 8 }}rem] p-1 grow">
            Description
        </div>
    {% endif %}
    <div class="w-[{{ 10 if no_account_column else 8 }}rem] min-w-[{{ 10 if no_account_column else 8 }}rem] p-1 flex items-center relative group">
        Category
        <div id="txn-icon-category">
            {% with any_filters = txn_table["any-filters-category"] %}
                {% include "transactions/table-options-icon.jinja" %}
            {% endwith %}
        </div>
        <div id="txn-category"
             class="absolute left-0 top-8 bg-white border border-white drop-shadow-md font-normal w-64 hidden group-hover:block">
            {% with options = txn_table["options-category"], name="category" %}
                {% include "transactions/table-options.jinja" %}
            {% endwith %}
        </div>
    </div>
    {% if not asset_transactions %}
        <div class="w-[{{ 10 if no_account_column else 6 }}rem] min-w-[{{ 10 if no_account_column else 6 }}rem] p-1 flex items-center relative group">
            Tag
            <div id="txn-icon-tag">
                {% with any_filters = txn_table["any-filters-tag"] %}
                    {% include "transactions/table-options-icon.jinja" %}
                {% endwith %}
            </div>
            <div id="txn-tag"
                 class="absolute left-0 top-8 bg-white border border-white drop-shadow-md font-normal w-64 hidden group-hover:block">
                {% with options = txn_table["options-tag"], name="tag" %}
                    {% include "transactions/table-options.jinja" %}
                {% endwith %}
            </div>
        </div>
    {% else %}
        <div class="w-[8rem] min-w-[8rem] p-1 text-right">Price</div>
        <div class="w-[8rem] min-w-[8rem] p-1 text-right tooltip">
            Quantity
            <div class="tooltip-text right-[60%] top-0  after:left-full after:border-l-grey-800 after:-mt-[4px] font-normal w-60">
                Quantity adjusted for splits
            </div>
        </div>
    {% endif %}
    <div class="w-[7rem] min-w-[7rem] p-1 text-right">Amount</div>
    {% if not asset_transactions %}
        {% include "transactions/table-locked.jinja" %}
    {% endif %}
</div>
