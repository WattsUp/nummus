<div id="txn-config"
     class="w-full flex justify-end gap-1 font-serif"
     hx-swap-oob="{{ oob }}">
    <input name="search"
           value="{{ txn_table["search"] }}"
           placeholder="Search Transactions"
           class="mr-8 grow"
           hx-get="{{ url_for(controller + ".table", **url_args) }}"
           autocomplete="off">
    <select name="period"
            hx-get="{{ url_for(controller + ".table", **url_args) }}"
            autocomplete="off">
        {% with period = txn_table["period"] %}
            {% include "shared/period-options.jinja" %}
        {% endwith %}
    </select>
    <input id="txn-config-start"
           type="date"
           name="start"
           value="{{ txn_table["start"] }}"
           hx-get="{{ url_for(controller + ".table", period="custom", **url_args) }}"
           hx-trigger="blur changed,keyup[keyCode==13] changed"
           autocomplete="off">
    to
    <input id="txn-config-end"
           type="date"
           name="end"
           value="{{ txn_table["end"] }}"
           hx-get="{{ url_for(controller + ".table", period="custom", **url_args) }}"
           hx-trigger="blur changed,keyup[keyCode==13] changed"
           autocomplete="off">
</div>
