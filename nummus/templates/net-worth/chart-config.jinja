<div id="net-worth-config"
     class="w-full flex justify-center gap-1 font-serif items-center"
     hx-swap-oob="{{ oob }}"
     hx-include="#net-worth-config"
     hx-target="#net-worth-chart-data"
     hx-swap="outerHTML"
     hx-indicator=".spinner">
    <div class="max-md:hidden">
        Accounts:
        <select name="category"
                hx-get="{{ url_for('net_worth.chart') }}"
                autocomplete="off">
            <option value="" {% if not chart["category"] %}selected{% endif %}>All</option>
            {% for cat in chart["category_type"] %}
                <option value="{{ cat.name }}"
                        {% if chart["category"] == cat %}selected{% endif %}>{{ cat.pretty }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="grow max-md:hidden"></div>
    <div class"md:hidden">Period</div>
    <select name="period"
            hx-get="{{ url_for('net_worth.chart') }}"
            autocomplete="off">
        {% with period = chart["period"] %}
            {% include "shared/period-options.jinja" %}
        {% endwith %}
    </select>
    <div class="max-md:hidden">
        <input type="date"
               name="start"
               value="{{ chart["start"] }}"
               hx-get="{{ url_for('net_worth.chart', period='custom') }}"
               hx-trigger="blur changed,keyup[keyCode==13] changed"
               autocomplete="off">
        to
        <input type="date"
               name="end"
               value="{{ chart["end"] }}"
               hx-get="{{ url_for('net_worth.chart', period='custom') }}"
               hx-trigger="blur changed,keyup[keyCode==13] changed"
               autocomplete="off">
    </div>
</div>
