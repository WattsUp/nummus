<div id="net-worth-config"
     class="w-full flex justify-end gap-1 font-serif"
     hx-swap-oob="{{ oob }}"
     hx-include="#net-worth-config"
     hx-target="#net-worth-chart-data"
     hx-swap="outerHTML">
    TODO(WattsUp): add account category filters
    <select name="period" hx-get="{{ url_for("net_worth.chart") }}">
        <option value="this-month"
                {% if chart["period"] == "this-month" %}selected{% endif %}>This Month</option>
        <option value="last-month"
                {% if chart["period"] == "last-month" %}selected{% endif %}>Last Month</option>
        <option value="30-days"
                {% if chart["period"] == "30-days" %}selected{% endif %}>30 Days</option>
        <option value="90-days"
                {% if chart["period"] == "90-days" %}selected{% endif %}>90 Days</option>
        <option value="1-year"
                {% if chart["period"] == "1-year" %}selected{% endif %}>1 year</option>
        <option value="5-years"
                {% if chart["period"] == "5-years" %}selected{% endif %}>5 years</option>
        <option value="this-year"
                {% if chart["period"] == "this-year" %}selected{% endif %}>This Year</option>
        <option value="last-year"
                {% if chart["period"] == "last-year" %}selected{% endif %}>Last Year</option>
        <option value="all" {% if chart["period"] == "all" %}selected{% endif %}>All</option>
        <option value="custom"
                hidden="hidden"
                {% if chart["period"] == "custom" %}selected{% endif %}>Custom</option>
    </select>
    <input type="date"
           name="start"
           value="{{ chart["start"] }}"
           hx-get="{{ url_for("net_worth.chart", period="custom") }}"
           hx-trigger="blur changed,keyup[keyCode==13] changed">
    to
    <input type="date"
           name="end"
           value="{{ chart["end"] }}"
           hx-get="{{ url_for("net_worth.chart", period="custom") }}"
           hx-trigger="blur changed,keyup[keyCode==13] changed">
</div>
