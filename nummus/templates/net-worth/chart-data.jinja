{% if include_oob %}
    {% with oob = True %}
        {% include "net-worth/chart-config.jinja" %}
        {% if not chart["defer"] %}
            {% with assets = chart["assets"] %}
                {% include "accounts/assets.jinja" %}
            {% endwith %}
        {% endif %}
    {% endwith %}
{% endif %}
<div id="net-worth-chart-data">
    {% if chart["defer"] %}
        <script>netWorthChart.defer()</script>
        <div hx-get="{{ url_for("net_worth.chart") }}?no-defer"
             hx-include="#net-worth-config"
             hx-target="#net-worth-chart-data"
             hx-swap="outerHTML"
             hx-trigger="load"></div>
    {% else %}
        <script>netWorthChart.update(JSON.parse('{{ chart["data"] | tojson }}'))</script>
    {% endif %}
</div>
