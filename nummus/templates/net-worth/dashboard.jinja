<div id="dashboard-net-worth"
     class="relative bg-white p-2 flex flex-col min-h-[16rem] h-[16rem] md:min-h-[20rem] md:h-[20rem] md:col-span-2"
     hx-get="{{ url_for('net_worth.dashboard') }}"
     hx-trigger="update-asset from:body"
     hx-target="#dashboard-net-worth"
     hx-indicator="find .spinner">
    <a class="w-full flex space-between cursor-pointer group"
       href="{{ url_for('net_worth.page') }}"
       hx-get="{{ url_for('net_worth.page') }}"
       hx-target="#main"
       hx-swap="innerHTML"
       hx-push-url="true"
       hx-indicator="next .spinner">
        <h1 class="text-xl align-left w-full font-serif text-green-600 md:group-hover:underline md:group-hover:after:content-['Â»']">
            Net Worth
        </h1>
        <h1 class="text-lg">{{ chart["current"] | money }}</h1>
    </a>
    <div class="w-full grow dashboard relative min-h-0">
        <canvas id="net-worth-chart-canvas-dashboard" hx-preserve></canvas>
    </div>
    <div id="net-worth-chart-data">
        <script>netWorth.updateDashboard(JSON.parse('{{ chart["data"] | tojson }}'))</script>
    </div>
    <div>{% include "shared/spinner.jinja" %}</div>
</div>
