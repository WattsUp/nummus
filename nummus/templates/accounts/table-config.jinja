<div id="txn-config"
     class="w-full flex justify-end gap-1 font-serif"
     hx-swap-oob="{{ oob }}"
     hx-include="#txn-config">
    <input name="search"
           value="{{ txn_table["search"] }}"
           placeholder="Search Transactions"
           class="mr-8 grow"
           hx-get="{{ url_for("accounts.table", uri=txn_table["uri"]) }}">
    <select name="period"
            hx-get="{{ url_for("accounts.table", uri=txn_table["uri"]) }}">
        <option value="this-month"
                {% if txn_table["period"] == "this-month" %}selected{% endif %}>This Month</option>
        <option value="last-month"
                {% if txn_table["period"] == "last-month" %}selected{% endif %}>Last Month</option>
        <option value="30-days"
                {% if txn_table["period"] == "30-days" %}selected{% endif %}>30 Days</option>
        <option value="90-days"
                {% if txn_table["period"] == "90-days" %}selected{% endif %}>90 Days</option>
        <option value="1-year"
                {% if txn_table["period"] == "1-year" %}selected{% endif %}>1 year</option>
        <option value="5-years"
                {% if txn_table["period"] == "5-years" %}selected{% endif %}>5 years</option>
        <option value="this-year"
                {% if txn_table["period"] == "this-year" %}selected{% endif %}>This Year</option>
        <option value="last-year"
                {% if txn_table["period"] == "last-year" %}selected{% endif %}>Last Year</option>
        <option value="all" {% if txn_table["period"] == "all" %}selected{% endif %}>All</option>
        <option value="custom"
                hidden="hidden"
                {% if txn_table["period"] == "custom" %}selected{% endif %}>Custom</option>
    </select>
    <input type="date"
           name="start"
           value="{{ txn_table["start"] }}"
           hx-get="{{ url_for("accounts.table", uri=txn_table["uri"], period="custom") }}"
           hx-trigger="blur changed,keyup[keyCode==13] changed">
    to
    <input type="date"
           name="end"
           value="{{ txn_table["end"] }}"
           hx-get="{{ url_for("accounts.table", uri=txn_table["uri"], period="custom") }}"
           hx-trigger="blur changed,keyup[keyCode==13] changed">
</div>
<div id="txn-paging"
     class="flex w-full justify-end my-1"
     hx-swap-oob="{{ oob }}">
    <button class="button hover:red mr-1"
            hx-get="{{ url_for("accounts.table", uri=txn_table["uri"], search="") }}"
            hx-include="#txn-config">Clear Filters</button>
    <button class="button hover:green mr-auto"
            hx-get="{{ url_for("accounts.table", uri=txn_table["uri"], period="90-days", locked=False) }}"
            hx-include="this">Recent & Unlocked</button>
    <button hx-get="{{ url_for("accounts.table", uri=txn_table["uri"], offset=txn_table["offset_first"]) }}">
        {% with class="w-[24px] h-[24px] hover:fill-green" %}
            {% include "svg/arrow-first.svg" %}
        {% endwith %}
    </button>
    <button hx-get="{{ url_for("accounts.table", uri=txn_table["uri"], offset=txn_table["offset_prev"]) }}">
        {% with class="w-[24px] h-[24px] hover:fill-green" %}
            {% include "svg/arrow-left.svg" %}
        {% endwith %}
    </button>
    <span class="w-40 text-center">
        {{ txn_table["i_first"] }}
        -
        {{ txn_table["i_last"] }}
        of
        {{ txn_table["count"] }}
    </span>
    <button hx-get="{{ url_for("accounts.table", uri=txn_table["uri"], offset=txn_table["offset_next"]) }}">
        {% with class="w-[24px] h-[24px] hover:fill-green" %}
            {% include "svg/arrow-right.svg" %}
        {% endwith %}
    </button>
    <button hx-get="{{ url_for("accounts.table", uri=txn_table["uri"], offset=txn_table["offset_last"]) }}">
        {% with class="w-[24px] h-[24px] hover:fill-green" %}
            {% include "svg/arrow-last.svg" %}
        {% endwith %}
    </button>
</div>
